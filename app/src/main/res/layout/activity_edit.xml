<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syamantak.toonify_10.Edit"
    android:background="@color/colorbg">
    <ImageView
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/edit_iv"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_iv"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/filter"
        app:layout_constraintLeft_toLeftOf="@+id/edit_iv"
        android:id="@+id/edit_filter" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/edit_filter"
        android:layout_marginLeft="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_iv"
        android:layout_marginBottom="8dp"
        android:background="@drawable/brct"
        android:id="@+id/edit_contbrit" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_iv"
        app:layout_constraintLeft_toRightOf="@+id/edit_contbrit"
        android:layout_marginLeft="52dp"
        android:background="@drawable/hsv"
        android:id="@+id/edit_hsv" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_iv"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/edit_hsv"
        android:layout_marginLeft="49dp"
        android:background="@drawable/done"
        android:id="@+id/edit_done"/>
</android.support.constraint.ConstraintLayout>
