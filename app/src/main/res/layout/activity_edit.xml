<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    tools:layout_editor_absoluteX="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/edit_iv"
    android:layout_marginBottom="0dp">
    <ImageView
    android:layout_width="376dp"
    android:layout_height="427dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/edit_iv"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/edit_hsv"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/filter"
    app:layout_constraintLeft_toLeftOf="@+id/edit_iv"
    android:id="@+id/edit_filter"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toRightOf="@+id/edit_filter"
    android:layout_marginLeft="13dp"
    android:background="@drawable/brct"
    android:id="@+id/edit_contbrit"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toRightOf="@+id/edit_contbrit"
    android:layout_marginLeft="15dp"
    android:background="@drawable/hsv"
    android:id="@+id/edit_hsv"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toRightOf="@+id/edit_hsv"
    android:layout_marginLeft="140dp"
    android:background="@drawable/done"
    android:id="@+id/edit_done"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toRightOf="@+id/edit_hsv"
    android:layout_marginLeft="19dp"
    android:background="@drawable/rotate"
    android:id="@+id/edit_rotate"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/resize"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintRight_toLeftOf="@+id/edit_done"
    android:layout_marginRight="14dp"
    android:id="@+id/edit_resize"/>
</android.support.constraint.ConstraintLayout>

