<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syamantak.toonify_10.Filters"
    android:background="@color/colorbg">

    <ImageView
        android:layout_width="365dp"
        android:layout_height="368dp"
        android:id="@+id/filter_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/done"
        android:layout_marginRight="8dp"
        android:id="@+id/filters_done"
        app:layout_constraintRight_toRightOf="@+id/filter_iv"
        app:layout_constraintBottom_toBottomOf="@+id/filter_iv"
        android:layout_marginBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="361dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_iv"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
