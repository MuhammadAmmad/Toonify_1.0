<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syamantak.toonify_10.Filters"
    android:background="@color/colorbg">
    
    <ImageView
    android:id="@+id/filter_iv"
    android:layout_width="367dp"
    android:layout_height="330dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
    
    <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:max="100"
    android:minHeight="50dp"
    android:minWidth="200dp"
    android:progress="1"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="@+id/filter_iv"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="@+id/filter_iv"
    app:layout_constraintHorizontal_bias="0.503"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toBottomOf="@+id/filter_iv"
    app:layout_constraintVertical_bias="1.0"
    android:visibility="invisible"/>
    
    <Button
    android:id="@+id/filters_done"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/done"
    app:layout_constraintBottom_toBottomOf="@+id/filter_iv"
    app:layout_constraintRight_toRightOf="@+id/filter_iv" />
    
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="361dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_iv"
        app:layout_constraintVertical_bias="1.0">
        
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>
    
</android.support.constraint.ConstraintLayout>

