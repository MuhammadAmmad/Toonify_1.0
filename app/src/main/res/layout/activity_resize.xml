<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syamantak.toonify_10.Resize">
    <TextView
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:text="Enter Width :"
        app:layout_constraintRight_toLeftOf="@+id/editTextWidth"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <EditText
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/editTextWidth"
        android:layout_marginEnd="5dp"
        tools:layout_editor_absoluteX="126dp" />
    <TextView
        android:layout_width="115dp"
        android:layout_height="46dp"
        android:text="Enter Height :"
        app:layout_constraintRight_toLeftOf="@+id/editTextHeight"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/textView3" />
    <EditText
        android:layout_width="244dp"
        android:layout_height="51dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editTextHeight"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextWidth"
        android:layout_marginEnd="5dp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/done"
        android:id="@+id/resize_do"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextHeight"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="@+id/resize_iv" />
    <ImageView
        android:layout_width="365dp"
        android:layout_height="299dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/resize_iv"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/resize_do"
        app:layout_constraintVertical_bias="0.937"
        app:layout_constraintHorizontal_bias="0.555"
        tools:layout_editor_absoluteY="202dp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/left"
        android:id="@+id/resize_done"
        app:layout_constraintBottom_toBottomOf="@+id/resize_iv"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/resize_iv" />
</android.support.constraint.ConstraintLayout>
