<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
    android:layout_width="316dp"
    android:layout_height="349dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="47dp"
    android:id="@+id/rotate_iv" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="@+id/rotate_iv"
    app:layout_constraintBottom_toBottomOf="@+id/rotate_iv"
    android:layout_marginBottom="8dp"
    android:id="@+id/rotate_button"
    android:background="@drawable/done"/>
    <Button
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginRight="51dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="22dp"
    android:background="@drawable/ckcwise"
    android:id="@+id/ckcwise_button"
    app:layout_constraintTop_toBottomOf="@+id/rotate_iv" />
    <Button
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="53dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="22dp"
    android:background="@drawable/antickcwise"
    android:id="@+id/antickcwise_button"
    app:layout_constraintTop_toBottomOf="@+id/rotate_iv" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="Angle: 0"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/rotate_sb"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/rotate_tv" />
    <SeekBar
    android:id="@+id/rotate_sb"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:max="359"
    android:progress="180"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>

